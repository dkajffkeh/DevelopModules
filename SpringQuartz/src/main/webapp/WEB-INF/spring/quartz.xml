<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 테스트용   -->
<bean id="testJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    <!-- 서비스 구현 객체의 빈 이름을 인자로 줍니다. -->
    <property name="targetObject" ref="batch" />
    <!-- 서비스 객체에서 주기적으로 실행될 메소드른 지정합니다. -->
    <property name="targetMethod" value="callBatchA" />
    <!-- 동시 실행을 방지합니다. -->
    <property name="concurrent" value="false" />
</bean>

<!-- 테스트용  트리거-->

<bean id="testJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">

    <property name="jobDetail" ref="callBatchA" />
    <!-- cronExpression 초 분 시 일 월 요 년도 -->
    <property name="cronExpression" value="1 0/* * * * ?" />
</bean>


</beans>
